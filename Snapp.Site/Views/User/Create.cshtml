@model Snapp.Core.ViewModels.Admin.UserViewModel

@{
    ViewData["Title"] = "ثبت کاربر";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="card">
            <div class="header">
                <h4 class="title pull-right">ثبت کاربر</h4>
                <h4 class="title pull-left">
                    <a href="/User/Index" class="btn btn-danger">
                        بازگشت
                    </a>
                </h4>
            </div>
            <div class="clearfix"></div>
            <div class="content">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="RoleId"></label>
                        <select asp-for="RoleId"  class="form-control" asp-items="@ViewBag.RoleId"></select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserName" class=""></label>
                        <input asp-for="UserName" class="form-control" placeholder="شماره موبایل" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Isactive" class=""></label>
                        <input type="checkbox" asp-for="Isactive" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="ثبت و بازگشت" class="btn btn-info btn-fill" />

                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@if (ViewBag.IsSuccess == false) 
{ 
    <script src="~/js/sweet.js"></script>
    <script>
        swal("اخطار", "قبلا کاربری با این مشخصات ثبت شده است.", "warning", { buttons: "متوجه شدم"});
    </script>
}

