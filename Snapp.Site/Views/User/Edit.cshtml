@model Snapp.Core.ViewModels.Admin.UserEditViewModel

@{
    ViewData["Title"] = "ویرایش کاربر";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<link href="~/Picker/PersianDatePicker.min.css" rel="stylesheet" />
<script src="~/Picker/PersianDatePicker.min.js"></script>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="card">
            <div class="header">
                <h4 class="title pull-right">ویرایش کاربر</h4>
                <h4 class="title pull-left">
                    <a href="/User/Index" class="btn btn-danger">
                        بازگشت
                    </a>
                </h4>
            </div>
            <div class="clearfix"></div>
            <div class="content">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="RoleId"></label>
                        <select asp-for="RoleId" class="form-control" asp-items="@ViewBag.RoleId"></select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserName" class=""></label>
                        <input asp-for="UserName" class="form-control" placeholder="شماره موبایل" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class=""></label>
                        <input asp-for="FullName" class="form-control" placeholder="نام و نام خانوادگی" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BirthDate" class=""></label>
                        <input asp-for="BirthDate" class="form-control" onclick="PersianDatePicker.Show(this,'@ViewBag.MyDate')" />

                    </div>
                    <div class="form-group">
                        <label asp-for="Isactive" class=""></label>
                        <input type="checkbox" asp-for="Isactive" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="ذخیره و بازگشت" class="btn btn-info btn-fill" />

                    </div>
                </form>

            </div>
        </div>
    </div>
</div>




