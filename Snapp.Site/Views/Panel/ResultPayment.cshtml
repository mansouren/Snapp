@model Snapp.DataAccessLayer.Entities.Factor
@{
    ViewData["Title"] = "نتیجه تراکنش";
    Layout = "~/Views/Shared/_SiteLayOut.cshtml";
}

<h1 class="text-center">نتیجه تراکنش</h1>
<div class="row" style="margin-bottom:30px;">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <form asp-action="Payment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <img src="~/images/Payment.png" class="img-fluid" style="margin:auto;" alt="اسنپ" />
            </div>
            <div class="form-group">
                @if (Model.BankName == null)
                {
                    <div class="alert alert-danger">
                        <h5 class="text-center">تراکنش انجام نشد</h5>
                        <br />
                        <p class="text-center">شماره سفارش : @Model.OrderNumber</p>
                    </div>
                }
                else
                {
                    <div class="alert alert-success">
                        <h5 class="text-center">تراکنش با موفقیت انجام شد</h5>
                        <br />
                        <p class="text-center">شماره سفارش : @Model.OrderNumber</p>
                        <br />
                        <p class="text-center">شماره پیگیری : @Model.TraceNumber</p>
                    </div>
                }
            </div>

        </form>
    </div>
</div>

