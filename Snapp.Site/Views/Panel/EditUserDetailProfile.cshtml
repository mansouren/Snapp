@model Snapp.Core.ViewModels.Profile.UserDetailProfileViewModel

@{
    ViewData["Title"] = "مشخصات پروفایل";
    Layout = "~/Views/Shared/_SiteLayOut.cshtml";
}
<link href="~/Picker/PersianDatePicker.min.css" rel="stylesheet" />
<h1 class="text-center">مشخصات پروفایل</h1>

<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <form asp-action="EditUserDetailProfile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <img src="~/images/Profile.png" class="img-fluid" style="margin:auto;"  alt="اسنپ پروفایل" />
            </div>
            <div class="form-group">
                <input asp-for="FullName" class="form-control" placeholder="نام و نام خانوادگی" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="BirthDate" class="form-control"
                       onclick="PersianDatePicker.Show(this,'@ViewBag.MyDate')"
                       placeholder="تاریخ تولد" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره تغییرات" class="btn btn-success btn-block" />
            </div>
        </form>
    </div>
</div>

<script src="~/js/sweet.js"></script>
<script src="~/Picker/PersianDatePicker.min.js"></script>
@if (ViewBag.IsSuccess)
{
    <script>
        swal("انجام تغییرات", "تغییرات با موفقیت انجام شد", "success", { button: "متوجه شدم" });
    </script>
}

